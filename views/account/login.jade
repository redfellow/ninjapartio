extends ../layout

block content
  .page-header
    h3 Kirjaudu
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='email') Sähköposti
      .col-sm-7
        input.form-control(type='email', name='email', id='email', placeholder='Sähköposti', autofocus, required)
    .form-group
      label.col-sm-3.control-label(for='password') Salasana
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Salasana', required)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-user
          | Kirjaudu
        a.btn.btn-link(href='/forgot') Unohditko salasanan?
    .form-group
      .col-sm-offset-3.col-sm-7
        hr
    .form-group
      .col-sm-offset-3.col-sm-7
        a.btn.btn-block.btn-google.btn-social(href='/auth/google')
          i.fa.fa-google-plus
          | Kirjaudu sisään Google-tilillä

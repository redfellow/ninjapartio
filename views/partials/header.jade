.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Menu
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | Ninja-armory
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Info') ? 'active' : undefined)
          a(href='/') Info
        li(class=(title == 'Armory') ? 'active' : undefined)
          a(href='/armory') Armory
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Kirjaudu') ? 'active' : undefined)
            a(href='/login') Kirjaudu
          li(class=(title == 'Rekisteröidy') ? 'active' : undefined)
            a(href='/signup') Rekisteröidy
        else
          li.dropdown(class=(title == 'Tili') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') Tili
              li.divider
              li
                a(href='/logout') Kirjaudu ulos
